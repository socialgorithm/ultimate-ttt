{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {
      "../*": [
        "src/*"
      ]
    },
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "test"
  ],
  "typeRoots": [
    "node_modules/@types",
    "src/definitions"
  ]
}